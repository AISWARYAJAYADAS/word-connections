{
  "name": "word-connections-backend",
  "version": "1.0.0",
  "description": "Backend API for Word Connections puzzle game inspired by NYT Connections",
  "main": "dist/server.js",
  "module": "CommonJS",
  "scripts": {
    "start": "node -r tsconfig-paths/register -r module-alias/register dist/server.js",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "prod": "npm run build && npm start",
    "postinstall": "npm run build",
    "test": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "puzzle",
    "api",
    "typescript",
    "nodejs",
    "express"
  ],
  "author": "Aiswarya Jayadas",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^6.7.0",
    "helmet": "^8.0.0",
    "module-alias": "^2.2.3",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@data/(.*)$": "<rootDir>/src/data/$1"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "_moduleAliases": {
      "@config": "dist/config",
      "@controllers": "dist/controllers",
      "@services": "dist/services",
      "@utils": "dist/utils",
      "@data": "dist/data",
      "@interfaces": "dist/interfaces"
    }
  }
}
